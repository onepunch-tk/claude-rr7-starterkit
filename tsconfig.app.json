{
	"extends": "./tsconfig.json",
	"include": [
		".react-router/types/**/*",
		"app/**/*",
		"app/**/.server/**/*",
		"app/**/.client/**/*",
		"workers/**/*",
		"adapters/**/*",
		"server/**/*",
		"worker-configuration.d.ts"
	],
	"compilerOptions": {
		"composite": true,
		"strict": true,
		"lib": ["DOM", "DOM.Iterable", "ES2022"],
		"types": ["vite/client", "@types/node"],
		"target": "ES2022",
		"module": "ES2022",
		"moduleResolution": "bundler",
		"jsx": "react-jsx",
		"baseUrl": ".",
		"rootDirs": [".", "./.react-router/types"],
		"paths": {
			"~/*": ["./app/*"],
			"adapters/*": ["./adapters/*"]
		},
		"esModuleInterop": true,
		"resolveJsonModule": true
	}
}
