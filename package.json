{
	"name": "claude-rr7-starterkit",
	"private": true,
	"type": "module",
	"scripts": {
		"dev:cloudflare": "cross-env PLATFORM=cloudflare react-router dev",
		"dev:express": "cross-env PLATFORM=node NODE_ENV=development SERVER=express tsx watch --tsconfig tsconfig.app.json server/app.ts",
		"dev:fastify": "cross-env PLATFORM=node NODE_ENV=development SERVER=fastify tsx watch --tsconfig tsconfig.app.json server/app.ts",
		"build": "cross-env PLATFORM=cloudflare react-router build",
		"build:cloudflare": "cross-env PLATFORM=cloudflare react-router build",
		"build:node": "cross-env PLATFORM=node react-router build",
		"preview": "bun run build && vite preview",
		"start": "cross-env NODE_ENV=production node server.js",
		"start:express": "cross-env NODE_ENV=production SERVER=express node server.js",
		"start:fastify": "cross-env NODE_ENV=production SERVER=fastify node server.js",
		"typecheck": "react-router typegen && tsc -b --noEmit",
		"deploy": "bun run build:cloudflare && wrangler deploy",
		"deploy:cloudflare": "bun run build:cloudflare && wrangler deploy",
		"deploy:staging": "wrangler deploy --env staging",
		"deploy:production": "wrangler deploy --env production",
		"cf:dev": "wrangler dev",
		"cf:typegen": "wrangler types",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:push": "drizzle-kit push",
		"db:studio": "drizzle-kit studio",
		"db:auth": "bunx @better-auth/cli generate --config app/infrastructure/external/better-auth/auth.cli.ts --output app/infrastructure/persistence/schema/auth.schema.ts",
		"docker:build": "docker build -f docker/Dockerfile -t claude-rr7-starterkit .",
		"docker:run": "docker run -p 3000:3000 --env-file docker/.env.docker claude-rr7-starterkit",
		"docker:prune": "docker image prune -f"
	},
	"dependencies": {
		"@fastify/middie": "^9.1.0",
		"@fastify/static": "^9.0.0",
		"@radix-ui/react-alert-dialog": "^1.1.15",
		"@radix-ui/react-avatar": "^1.1.11",
		"@radix-ui/react-checkbox": "^1.3.3",
		"@radix-ui/react-dialog": "^1.1.15",
		"@radix-ui/react-dropdown-menu": "^2.1.16",
		"@radix-ui/react-label": "^2.1.8",
		"@radix-ui/react-radio-group": "^1.3.8",
		"@radix-ui/react-scroll-area": "^1.2.10",
		"@radix-ui/react-select": "^2.2.6",
		"@radix-ui/react-separator": "^1.1.8",
		"@radix-ui/react-slot": "^1.2.4",
		"@radix-ui/react-switch": "^1.2.6",
		"@radix-ui/react-tooltip": "^1.2.8",
		"@react-email/components": "^1.0.6",
		"@react-router/express": "^7.12.0",
		"better-auth": "^1.4.17",
		"class-variance-authority": "^0.7.1",
		"claude-rr7-starterkit": ".",
		"clsx": "^2.1.1",
		"date-fns": "^4.1.0",
		"dotenv": "^17.2.3",
		"drizzle-orm": "^0.45.1",
		"esbuild": "^0.27.2",
		"express": "^5.2.1",
		"fastify": "^5.7.1",
		"isbot": "^5.1.33",
		"ky": "^1.14.2",
		"lodash": "^4.17.23",
		"lucide-react": "^0.562.0",
		"next-themes": "^0.4.6",
		"postgres": "^3.4.8",
		"qrcode": "^1.5.4",
		"react": "^19.2.3",
		"react-dom": "^19.2.3",
		"react-email": "^5.2.5",
		"react-router": "7.12.0",
		"resend": "^6.8.0",
		"sonner": "^2.0.7",
		"tailwind-merge": "^3.4.0",
		"undici": "^7.19.0",
		"usehooks-ts": "^3.1.1",
		"zod": "^4.3.5"
	},
	"overrides": {
		"esbuild": "^0.27.2"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.11",
		"tsx": "^4.21.0",
		"@cloudflare/vite-plugin": "1.21.1",
		"@react-router/dev": "7.12.0",
		"@tailwindcss/vite": "^4.1.18",
		"@types/express": "^5.0.6",
		"@types/node": "^25.0.10",
		"@types/qrcode": "^1.5.6",
		"@types/react": "^19.2.9",
		"@types/react-dom": "^19.2.3",
		"cross-env": "^10.1.0",
		"drizzle-kit": "^0.31.8",
		"tailwindcss": "^4.1.18",
		"tsconfig-paths": "^4.2.0",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.9.3",
		"vite": "^7.3.1",
		"vite-tsconfig-paths": "^6.0.4",
		"wrangler": "^4.59.3"
	}
}
